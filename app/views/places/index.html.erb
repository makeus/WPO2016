<h1>Beer places search</h1>

<p id="notice"><%= notice %></p>

<%= form_tag places_path, class: "form-inline" do %>
  <span class="form-group">
    <label>city <%= text_field_tag :city, params[:city], class: "form-control" %></label>
  </span>
  <%= submit_tag "Search", class: "btn btd-default" %>
<% end %>

<% if @places %>
  <table class="table table-hover">
    <thead>
      <% Place.rendered_fields.each do |f| %>
        <td><%=f %></td>
      <% end %>
    </thead>
    <% @places.each do |place| %>
      <tr>
        <% Place.rendered_fields.each do |f| %>
          <% if f.eql? :id %>
            <td><%= link_to place.id, place_path(place.id) %></td>
          <% else %>
            <td><%= place.send(f) %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </table>
<% end %>