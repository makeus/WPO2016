<h1>Rating statistics</h1>

<div class="row">
  <div class="col-sm-4">
    <%= render 'rating_averages_list', rating_averages: @best_beers, title: "Best beers" %>
  </div>
  <div class="col-sm-4">
    <%= render 'rating_averages_list', rating_averages: @best_breweries, title: "Best breweries" %>
  </div>
  <div class="col-sm-4">
    <%= render 'rating_averages_list', rating_averages: @best_styles, title: "Best styles" %>
  </div>
</div>

<h2>Most active users</h2>

<table class="table table-hover">
  <thead>
  <tr>
    <th></th>
    <th>favourite beer</th>
    <th>preferred style</th>
    <th>favourite brewery</th>
    <th>ratings</th>
  </tr>
  </thead>

  <tbody>
  <% @best_users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.favourite_beer %></td>
        <td><%= user.favourite_style.name if user.favourite_style %></td>
        <td><%= user.favourite_brewery.name if user.favourite_brewery %></td>
        <td><%= user.ratings.count %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<h2>Recent ratings</h2>

<ul>
  <% @recent_ratings.each do |rating| %>
  <li>
    <%= rating %>
    <%= link_to rating.user.username, rating.user %>
  </li>
  <% end %>
</ul>